<apex:page showHeader="false" sidebar="false" applyHtmlTag="false" action="{!SubmitSign}" standardStylesheets="false" standardController="Lead" extensions="PARTAPDF" applyBodyTag="false" cache="false">
    <html>
        <head>
            <style>
                @page {
                size: letter;
                margin: 25mm;
                @top-right{
                content: "Lead Part-A Approval Form";
                }
                @bottom-center {
                content: "Page " counter(page) " of " counter(pages);
                }
                }
                .page-break {
                display:block;
                page-break-after:always;
                }
                table{width:100%}
                .th{background: #5fafce;font-weight: bold;}
                body{background:#f8f8f8}
                td{padding:3px}
                .splitRow{padding: 5px;border-bottom:solid 1px #a7a9ab;}
                .secEnd{padding: 10px;}
                .secEndto{padding: 150px;}
                input[value='Cancel'] {margin-left : 25px;}
            </style>
        </head>
        <body>
            <apex:form id="formid">
                <h2>Diagnosis Verification Form</h2>
                
                <table style="width:100%;font-size:12px;">
                    <tr>
                        <td style="width:50%;">Child Age :</td>
                        <td style="width:50%;">{!currLead.Child_Age__c}</td>
                    </tr>
                    <tr>
                        <td>Child DOB </td>
                        <td> <apex:outputText value="{0,date,MM'/'dd'/'yyyy}">
                            <apex:param value="{!currLead.DOB__c}"/>
                            </apex:outputText>
                        </td>
                    </tr>
                    <tr>
                        <td>Child FirstName : </td>
                        <td>{!currLead.FirstName}</td>
                    </tr>
                    <tr>
                        <td>Child Middle Initial : </td>
                        <td>{!currLead.Child_Middle_Initial__c}</td>
                    </tr>
                    <tr>
                        <td>Child Last Name :</td>
                        <td>{!currLead.LastName}</td>
                    </tr>
                    <tr>
                        <td>Child Gender  :</td>
                        <td>{!currLead.Gender__c}</td>
                    </tr>
                    <tr>
                        <td>Parent First Name :</td>
                        <td>{!currLead.Parent_First_Name__c}</td>
                    </tr>
                    <tr>
                        <td>Parent Last Name :</td>
                        <td>{!currLead.Parent_Last_Name__c}</td>
                    </tr>
                    <tr>
                        <td>Provider First Name :</td>
                        <td>{!currLead.Treating_Medical_Professional_First_Name__c}</td>
                    </tr>
                    <tr>
                        <td>Provider Last Name :</td>
                        <td>{!currLead.Treating_Medical_Professional_Last_Name__c}</td>
                    </tr>
                    <tr>
                        <td>Provider Phone :</td>
                        <td>{!currLead.Treating_Medical_Professional_Phone__c}</td>
                    </tr>
                    <tr>
                        <td>Provider Email :</td>
                        <td>{!currLead.Treating_Medical_Professional_Email__c}</td>
                    </tr>
                    <tr>
                        <td>Hospital or Treartment Facility  :</td>
                        <td>{!currLead.Hospital_Treatment_Facility_Treating__c}</td>
                    </tr>
                    <tr>
                    <td>I am recognized by my state to practice as a :</td>
                    <td>{!currLead.I_am_Recognized_To_Practice_As_a__c}</td>
                    </tr>
                    <tr>
                    <td>I have direct knowledge of this patients condition and I am part of the treating healthcare team : </td>
                    <td>{!currLead.I_m_Part_of_The_Treating_HealthCare_Team__c }</td>
                    </tr>
                    <tr>
                    <td>Is QA 2607 QA2607 in a comatose or vegetative state? :</td>
                    <td>{!currLead.Is_in_a_Comatose_Vegetative_State__c}</td>
                    </tr>
                    
                 

                    
                    <apex:outputPanel rendered="{!questionList.size > 0}">
                        
                        <apex:repeat value="{!questionList}" var="wrap">
                            <tr>
                                <td> ICD Code</td>
                                <td>{!wrap.ICD_Code__c}</td>
                            </tr>
                            <tr>
                                <td>Primary Diagnosis</td>
                                <td>{!wrap.Primary_Diagnosis__c}</td>
                            </tr>
                            <tr>
                                <td>{!wrap.Medical_Question__r.Question__c}</td>
                                <td>{!wrap.Medical_Question_Answer__c}</td>
                            </tr>
                        </apex:repeat>
                    </apex:outputPanel>
                    
                
                    
                       <apex:outputpanel rendered="{!currLead.Current_Condition__c!=Null}">
                        <tr>
                            <td style="font-size:12px;width:50%">
                             Does {!currLead.FirstName} {!currLead.LastName} have any of the following conditions? (please select all that apply) :</td>
                            <td style="font-size:12px;"> {!currLead.Current_Condition__c}</td>
                        </tr>
                       </apex:outputpanel>
                       <apex:outputpanel rendered="{!currLead.Is_We_Need_To_Expedite_The_Process__c!=Null}">
                        <tr>
                            <td style="font-size:12px;width:50%">Is there a medical reason we would need to expedite the process? :</td>
                            <td style="font-size:12px;">{!currLead.Is_We_Need_To_Expedite_The_Process__c}</td>                           
                        </tr>
                        </apex:outputpanel>
                        <apex:outputpanel rendered="{!currLead.Please_Explain__c!=Null}">
                        <tr>
                            <td style="font-size:12px;width:50%">Please explain : </td>
                            <td style="font-size:12px;">{!currLead.Please_Explain__c}</td>
                        </tr>
                        </apex:outputpanel>
                        <apex:outputpanel rendered="{!currLead.Will_Child_s_Condition_Deteriorate__c!=Null}">
                        <tr>
                            <td style="font-size:12px;width:50%">Do you expect this childs condition will significantly deteriorate in the next 3-6 months? :</td>
                            <td style="font-size:12px;">{!currLead.Will_Child_s_Condition_Deteriorate__c}</td>
                         </tr>
                         </apex:outputpanel>
                         <apex:outputpanel rendered="{!currLead.Communication__c!=Null}">
                         <tr>
                            
                            <td style="font-size:12px;width:50%">In order to facilitate communication, please select all that apply to {!currLead.FirstName} {!currLead.LastName} :</td>
                            <td style="font-size:12px;">{!currLead.Communication__c}</td>
                            
                         </tr>
                         </apex:outputpanel>
                    
                </table>
               <center> <apex:commandButton value="Sign" action="{!SubmitSign}"/>  <apex:commandButton value="Cancel" action="{!cancel}"/> </center>
                      
                
            </apex:form>
        </body>
    </html>
</apex:page>
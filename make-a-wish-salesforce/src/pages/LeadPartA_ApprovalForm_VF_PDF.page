<apex:page showHeader="false" renderAs="pdf" sidebar="false" applyHtmlTag="false" standardStylesheets="false" standardController="Lead" extensions="PARTAPDF" applyBodyTag="false">
    <html>
        <head>
            <style>
                @page {
                size: letter;
                margin: 25mm;
                @bottom-center {
                content: "Page " counter(page) " of " counter(pages);
                }
                }                
                .page-break {
                display:block;
                page-break-after:always;
                }
                table{width:100%; font-size:14px;}
                .th{font-weight: bold;}
                td{padding:10px}
                .splitRow{padding: 5px;border-bottom:solid 1px #a7a9ab;}
                .secEnd{padding: 10px;}
                .secEndto{padding: 150px;}
                .texDec{   font-family: "Times New Roman", Times, serif;   font-size: 1em; width:50%; font-size:14px }
            </style>
        </head>
        <body>
            <apex:form id="formid">
                <h2>Diagnosis Verification Form</h2>
                
                <table style="width:100%;font-size:14px;">
                    <tr>
                        <td class="texDec">Child Age :</td>
                        <td class="texDec">{!currLead.Child_Age__c}</td>
                    </tr>
                    <tr>
                        <td class="texDec">Child DOB </td>
                        <td class="texDec"> {!currLead.DOB__c}</td>
                    </tr>
                    <tr>
                        <td class="texDec">Child FirstName : </td>
                        <td class="texDec">{!currLead.FirstName}</td>
                    </tr>
                    <tr>
                        <td class="texDec">Child Middle Initial : </td>
                        <td class="texDec">{!currLead.Child_Middle_Initial__c}</td>
                    </tr>
                    <tr>
                        <td class="texDec">Child Last Name :</td>
                        <td class="texDec">{!currLead.LastName}</td>
                    </tr>
                    <tr>
                        <td class="texDec">Child Gender  :</td>
                        <td class="texDec">{!currLead.Gender__c}</td>
                    </tr>
                    <tr>
                        <td class="texDec">Parent First Name :</td>
                        <td class="texDec">{!currLead.Parent_First_Name__c}</td>
                    </tr>
                    <tr>
                        <td class="texDec">Parent Last Name :</td>
                        <td class="texDec">{!currLead.Parent_Last_Name__c}</td>
                    </tr>
                    <tr>
                        <td class="texDec">Provider First Name :</td>
                        <td class="texDec">{!currLead.Treating_Medical_Professional_First_Name__c}</td>
                    </tr>
                    <tr>
                        <td class="texDec">Provider Last Name :</td>
                        <td class="texDec">{!currLead.Treating_Medical_Professional_Last_Name__c}</td>
                    </tr>
                    <tr>
                        <td class="texDec">Provider Phone :</td>
                        <td class="texDec">{!currLead.Treating_Medical_Professional_Phone__c}</td>
                    </tr>
                    <tr>
                        <td class="texDec">Provider Email :</td>
                        <td class="texDec">{!currLead.Treating_Medical_Professional_Email__c}</td>
                    </tr>
                    <tr>
                        <td class="texDec">Hospital or Treatment Facility  :</td>
                        <td class="texDec">{!currLead.Hospital_Treatment_Facility_Treating__c}</td>
                    </tr>
                    
                    <tr>
                        <td class="texDec">I am recognized by my state to practice as a :</td>
                        <td class="texDec">{!currLead.I_am_Recognized_To_Practice_As_a__c}</td>
                    </tr>
                    <tr>
                        <td class="texDec">I have direct knowledge of this patients condition and I am part of the treating healthcare team : </td>
                        <td class="texDec">{!currLead.I_m_Part_of_The_Treating_HealthCare_Team__c }</td>
                    </tr>
                    <tr>
                        <td class="texDec">Is QA 2607 QA2607 in a comatose or vegetative state? :</td>
                        <td class="texDec">{!currLead.Is_in_a_Comatose_Vegetative_State__c}</td>
                    </tr>
                    
                    
                        
                        <apex:repeat value="{!questionList}" var="wrap" rendered="{!questionList.size > 0}">
                            <tr>
                                <td class="texDec"> ICD Code:</td>
                                <td class="texDec">{!wrap.ICD_Code__c}</td>
                            </tr>
                            <tr>
                                <td class="texDec">Primary Diagnosis:</td>
                                <td class="texDec">{!wrap.Primary_Diagnosis__c}</td>
                            </tr>
                            <tr>
                                <td class="texDec">{!wrap.Medical_Question__r.Question__c}</td>
                                <td class="texDec">{!wrap.Medical_Question_Answer__c}</td>
                                <td class="texDec">{!wrap.Epilepsy_Value__c}</td>
                            </tr>
                        </apex:repeat>
                    
                    
                    
                    
                    <apex:outputpanel rendered="{!currentCondition != Null}">
                        <tr>
                            <td class="texDec">
                                Does {!currLead.FirstName} {!currLead.LastName} have any of the following conditions? (please select all that apply) :</td>
                            <td class="texDec"> {!currentCondition}</td>
                        </tr>
                    </apex:outputpanel>
                    <apex:outputpanel rendered="{!currLead.Is_We_Need_To_Expedite_The_Process__c!=Null}">
                        <tr>
                            <td class="texDec">Is there a medical reason we would need to expedite the process? :</td>
                            <td class="texDec">{!currLead.Is_We_Need_To_Expedite_The_Process__c}</td>                           
                        </tr>
                    </apex:outputpanel>
                    <apex:outputpanel rendered="{!currLead.Please_Explain__c!=Null}" layout="block" style="width:100%; margin-top:8%; margin-left:2%">
                        <div style="width:100%;">
                            <div style="width:50%;float:left">
                                Please explain: 
                            </div>
                            <div style="width:50%;float:left">
                                {!currLead.Please_Explain__c}
                            </div>
                        </div>
                        
                    </apex:outputpanel>
                    <apex:outputpanel rendered="{!currLead.Will_Child_s_Condition_Deteriorate__c!=Null}">
                        <tr>
                            <td class="texDec">Do you expect this childs condition will significantly deteriorate in the next 3-6 months? :</td>
                            <td class="texDec">{!currLead.Will_Child_s_Condition_Deteriorate__c}</td>
                        </tr>
                    </apex:outputpanel>
                    <apex:outputpanel rendered="{!currLead.Please_Explain__c!=Null}" layout="block" style="width:100%; margin-top:8%; margin-left:2%">
                        
                        <div style="width:100%;">
                            <div style="width:50%;float:left">
                                Please explain Deteriorate :
                            </div>
                            <div style="width:50%;float:left">
                                {!currLead.Please_Explain_Deteriorate__c}
                            </div>
                        </div>
                    </apex:outputpanel>
                    
                    <apex:outputpanel rendered="{!currLead.Communication__c!=Null}">
                        <tr>
                            <td class="texDec">In order to facilitate communication, please select all that apply to {!currLead.FirstName} {!currLead.LastName} :</td>
                            <td class="texDec">{!currLead.Communication__c}</td>
                        </tr>
                    </apex:outputpanel>
                    
                    <apex:outputPanel styleClass="signDate">
                        <tr>
                            <td class="texDec">  </td>
                            <td class="texDec">  </td>
                        </tr>
                        <tr>
                            <td style="font-size:14px;width:50%" class="sign">Signature <span style="color:white;text-decoration: underline;">~s1</span> </td>
                        </tr>
                        <tr>
                            <td style="text-align:right;font-size:14px;width:50%;" class="date">Date : {!MONTH(TODAY())}/{!DAY(TODAY())}/{!YEAR(TODAY())}</td>
                        </tr>
                    </apex:outputPanel>
                </table>
                
                <script>
                $(document).ready(function() {
                    //Find and Replace with Child Name
                    $(".medQuest").each(function(){
                        var text = $(this).text();
                        $(this).text(text.replace("[child's name]","{!currLead.FirstName} {!currLead.LastName}"));
                    });
                    $(".medQuest").each(function(){
                        var text = $(this).text();
                        $(this).text(text.replace("[Insert child's name]","{!currLead.FirstName} {!currLead.LastName}"));
                    });
                });
                </script>
                
            </apex:form>
        </body>
    </html>
</apex:page>
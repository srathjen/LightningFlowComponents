<!-- @description Visualforce page to launch Wish Flow Flow from Mobile button -->

<apex:page id="WishAffiliations" standardController="Case"
           standardStylesheets="false" lightningStylesheets="true"
           showHeader="false" sideBar="false">
    <apex:form >
        <html>
            <head>
                <meta charset="utf-8" />
                <meta http-equiv="x-ua-compatible" content="ie=edge" />
                <meta name="viewport" content="width=device-width, initial-scale=1" />
                
                <apex:includeLightning />
                <apex:slds />
                
                <style>
                    
                    .body {
                    margin-left: 1rem;
                    margin-right: 1rem;
                    }
                    .slds-scope .slds-p-around_small,  .uiLabel.flowruntimeInputWrapper {
                    padding: 0;
                    padding-bottom: 1rem;
                    }
                    .slds-p-around_small.slds-col {
                    padding: .75rem;
                    margin-left: 1.5rem;
                    }
                    div#flowContainer {
                    padding-top: 1rem;
                    }
                    .uiInput {
                    background-color: rgb(255, 255, 255);
                    border: 1px solid rgb(217, 219, 221);
                    border-radius: .25rem;
                    width: 100%;
                    transition: border .1s linear,background-color .1s linear;
                    display: inline-block;
                    padding: 0 1rem 0 .75rem;
                    line-height: 1.875rem;
                    min-height: calc(1.875rem + (1px * 2));
                    }
                    .slds-m-bottom_large.flowruntimeRichTextWrapper {
                    margin-bottom: 1rem;
                    }
                    b, b u {
                    color: #3a3a3a;
                    font-family: Salesforce Sans,Arial,sans-serif;
                    font-size: 16px;
                    font-size: 100%;
                    }
                    <!--
.slds-scope .slds-grow {
width: calc(65% - .5rem - .5rem);
}-->
                    lightning-input.slds-form-element.flowruntimePhone,lightning-input.slds-form-element.flowruntimeEmail {
                    max-width: 700px;
                    }
                    
                    hr {
                    display: block;
                    margin: 1rem 0;
                    border-top: 1px solid rgb(217, 219, 221);
                    height: 1px;
                    clear: both;
                    }
                    .content {
                    margin-left: .25em;
                    }
                    #flowHead {
                    margin-left: 1.5rem;
                    margin-right: 1.5rem;
                    margin-top: 1.5rem;
                    }
                    @media only screen and (max-width: 30em) {
                    .slds-scope:not(html), .slds-scope body {
                    font-size: .75rem;
                    }
                    .slds-scope .slds-text-heading_medium, .slds-scope .slds-text-heading--medium {
                    font-size: 1rem; 
                    padding-top: 1rem;
                    }
                    }
                    @media only screen and (min-width: 64em) {
                    .slds-scope .slds-large-size_3-of-12, .slds-scope .slds-large-size--3-of-12 {
                    width: 325px;
                    }}
                </style>
                
			<!--Walkme Extension Script - PRODUCTION Snippet - START -->
                        <script type="text/javascript">

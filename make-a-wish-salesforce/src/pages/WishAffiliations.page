                                     window._walkmeConfig = {smartLoad:true}; })();
                        </script>
			<!--Walkme Extension Script - PRODUCTION Snippet - END -->

            </head>
            
            <body> 
                <div class="slds-scope">
                    
                    <div id="flowHead">
                        <div class="slds-grid slds-wrap">
                            
                            <div class="slds-col slds-small-order--1 slds-size--1-of-3 slds-small-size--1-of-3 slds-medium-size--2-of-6">
                                <div class="slds-text-align_left slds-p-left_small">
                                    <img src="{!$Resource.prospective_assets + '/web/img/global/logo_maw_blue.png'}"/>  </div>
                            </div>
                            
                            <div class="slds-col slds-small-order--2 slds-size--2-of-3 slds-small-size--2-of-3 slds-medium-size--4-of-6 slds-col_bump-left">
                                <!--   <apex:commandButton value="Return to Case" action="{!view}" styleClass="slds-page-header__control slds-float--right slds-button slds-button--neutral slds-not-selected" /> -->
                                <apex:outputLink value="/{!Case.Id}" styleClass="slds-page-header__control slds-float--right slds-p-right_small">Return to Wish</apex:outputLink>
                            </div>
                            
                            <div class="slds-col slds-small-order--3 slds-size--1-of-1 slds-small-size--1-of-1 slds-medium-size--1-of-1 ">
                                <div class="slds-text-align_center slds-align-top slds-text-heading_medium slds-p-bottom_small slds-border_bottom" >
                                    <span><b>Wish Affiliations</b></span>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                    
                    <div id="flowContainer" />
                    
                    <script>
                    
                    var flowInput = [
                        {name: "recordId", type: "String", value: "{!case.Id}"}
                    ];
                    
                    $Lightning.use("c:WishVisionFormChildApp", function () {
                        $Lightning.createComponent(
                            "lightning:flow",
                            {},
                            "flowContainer",
                            function (component) {
                                component.startFlow("Wish_Affiliations_for_Mobile", flowInput);
                            });
                    },
                                   "{!$Site.BaseUrl}");
                    
                                  
                    $('input#input-6.slds-input').placeholder='wg name';

                    </script>
                    
                </div>
            </body>
            
        </html>
    </apex:form>
</apex:page>